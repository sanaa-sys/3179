{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 350,
  "height": 400,
  "title": "Health Expenditure vs Life Expectancy",
  "data": {
    "url": "https://raw.githubusercontent.com/sanaa-sys/3179/main/he_le.csv"
  },
  "params": [
    {
      "name": "Health_Expenditure",
      "value": 9000,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 9000,
        "step": 500,
        "name": "Minimum Health Expenditure: "
      }
    }
  ],
  "transform" :[
      {"filter": "datum.Health_Expenditure > Health_Expenditure"}

  ],
  "encoding": {
    "x": {
      "field": "Life Expectancy_x",
      "type": "quantitative",
      "title": "Life Expectancy",
      "axis": {"tickCount": 6},
      "scale": {"type": "linear", "domain": [40, 100]}
    },
    "y": {
      "field": "Health_Expenditure",
      "type": "quantitative",
      "title": "Health Expenditure per Capita ($)",
      "axis": {"tickCount": 8},
      "scale": {"type": "linear", "domain": [50, 10000]}
    }
  },
  "layer": [
    {
      
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population_x",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100000, 1000000, 5000000, 10000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#377eb8",
              "#2ca25f",
              "#a65628"
            ]
          }
        },
        "opacity": {
          
          "value": 0.4
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal"},
          {"field": "Health_Expenditure", "type": "quantitative", "format": ",", "title": "Health Expenditure"},
          {"field": "Life Expectancy_x", "type": "quantitative", "format": ",", "title": "Life Expectancy"},
          {"field": "Population_x", "type": "quantitative", "format": ",", "title": "Population"}
          
        ]
      }
     
    },

      
        {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country Name'] == 'China' || datum['Country Name'] == 'India' || datum['Country Name'] == 'Australia' || datum['Country Name'] == 'Zimbabwe' || datum['Country Name'] == 'Germany' || datum['Country Name'] == 'Yemen' ||  datum['Country Name'] == 'United States of America' ||  datum['Country Name'] == 'Chile'||  datum['Country Name'] == 'Nigeria'||  datum['Country Name'] == 'Somalia'||  datum['Country Name'] == 'South Korea' ||  datum['Country Name'] == 'Japan'||  datum['Country Name'] == 'South Africa'||  datum['Country Name'] == 'Sweden'||  datum['Country Name'] == 'Qatar'||  datum['Country Name'] == 'Mexico'||  datum['Country Name'] == 'Fiji'||  datum['Country Name'] == 'Brazil'||  datum['Country Name'] == 'Georgia'||  datum['Country Name'] == 'Norway'||  datum['Country Name'] == 'Switzerland'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal"},
          {"field": "Health_Expenditure", "type": "quantitative", "format": ",", "title": "Health Expenditure"},
          {"field": "Life Expectancy_x", "type": "quantitative", "format": ",", "title": "Life Expectancy"},
          {"field": "Population_x", "type": "quantitative", "format": ",", "title": "Population"}
        ]
      }
    }
    
  ]

}
