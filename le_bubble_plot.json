{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 300,
  "title": "Life Expectancy vs Fertility Rate",
  "data": {
    "url": "https://raw.githubusercontent.com/sanaa-sys/3179/main/le_fertility.csv"
  },
  "params": [

    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels":[
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
   "transform": [
     {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
   ],
  "encoding": {
    "x": {
      "field": "Fertility Rate",
      "type": "quantitative",
      "title": "Fertility Rate",
      "axis": {"tickCount": 7},
      "scale": {"type": "linear", "domain": [1, 7]}
    },
    "y": {
      "field": "Life Expectancy",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "linear", "domain": [40, 100]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#377eb8",
              "#2ca25f",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal"},
          {"field": "Life Expectancy", "type": "quantitative", "format": ","},
          {"field": "Fertility Rate", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","}
          
        ]
      }
    },
        {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country Name'] == 'China' || datum['Country Name'] == 'India' || datum['Country Name'] == 'Australia' || datum['Country Name'] == 'Ethiopia' || datum['Country Name'] == 'Germany' || datum['Country Name'] == 'Yemen' ||  datum['Country Name'] == 'United States of America' ||  datum['Country Name'] == 'Philippines'||  datum['Country Name'] == 'Nigeria'||  datum['Country Name'] == 'Somalia'||  datum['Country Name'] == 'Pakistan' ||  datum['Country Name'] == 'Haiti'||  datum['Country Name'] == 'South Africa'||  datum['Country Name'] == 'Iraq'||  datum['Country Name'] == 'Qatar'||  datum['Country Name'] == 'Mexico'||  datum['Country Name'] == 'Fiji'||  datum['Country Name'] == 'Brazil'||  datum['Country Name'] == 'Georgia'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal"},
          {"field": "Life Expectancy", "type": "quantitative", "format": ","},
          {"field": "Fertility Rate", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","}
        ]
      }
    }
    
  ]

}
