{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Top Spotify song played in each country",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://github.com/sanaa-sys/3179/blob/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://github.com/sanaa-sys/3179/blob/main/SpotifyTopSongsByCountry%20-%20May%202020.csv"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {
            "type": "text",
            "tooltip": [ {"field": "Title", "type": "nominal"},
                       {"field": "Artists", "type": "nominal", "format": ","},
                       {"field": "Album", "type": "nominal", "format": ","}]
          },
          
          "encoding": {
            "text": {"field": "Country", "type": "nominal"}
          }
        }
      ]
    }
  ]
}